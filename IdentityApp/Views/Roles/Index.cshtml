@model IEnumerable<AppRole>

<a class="btn btn-success" asp-action="Create">Create Role</a>
<hr>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Users</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">No roles found</td>
            </tr>
        }

        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <div class="d-flex flex-row justify-content-center align-items-center gap-1">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure?')">
                            <input type="hidden" value="@role.Id" name="Id">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>