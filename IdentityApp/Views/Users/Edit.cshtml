@model EditUserViewModel

<h2>Edit User</h2>
<hr>

<form action="Create" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" name="Id" value="@Model.Id">
    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input type="text" asp-for="FullName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input type="text" asp-for="Email" class="form-control">
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="card-title">Change Password</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input type="password" asp-for="Password" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control">
            </div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            <h5 class="card-title">Roles</h5>
        </div>
        <div class="card-body">
            @foreach (var role in ViewBag.Roles)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="SelectedRoles" id="@role" value="@role"
                    @(Model.SelectedRoles!.Any(i => i == role) ? "checked" : "") />
                    <label for="@role" class="form-check-label">@role</label>
                </div>
            }
        </div>
    </div>


    <div class=" d-flex flex-row justify-content-center">
        <button class="btn btn-success btn-lg btn-block">Save</button>
    </div>

</form>
