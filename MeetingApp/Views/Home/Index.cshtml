@model MeetingInfo
@{
    ViewBag.Title = "Toplantı Başvuru";
    Layout = "_Layout2";
}

@* <h1 class="h4">@ViewBag.SayHi, @ViewBag.Username</h1> *@

<h1 class="h4">@ViewData["SayHi"], @ViewData["Username"]</h1>
<h2>Toplantı Katılım Durumunuzu Bildiriniz</h2>

<div class="card my-2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm:ss") tarihinde gerçekleşecek</li>
        <li class="list-group-item">@Model.NumberOfPeople Katılımcı</li>
    </ul>
</div>

<a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Başvuru Yap</a>