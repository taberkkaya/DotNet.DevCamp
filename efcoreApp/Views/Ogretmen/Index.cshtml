@model IEnumerable<Ogretmen>
<h2>Öğretmen Listesi</h2>
<a asp-action="Create" class="btn btn-primary">Öğretmen Ekle</a>
<hr>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width:100px;">@Html.DisplayNameFor(m => m.OgretmenId)</th>
            <th>@Html.DisplayNameFor(m => m.Ad)</th>
            <th>@Html.DisplayNameFor(m => m.Soyad)</th>
            <th>@Html.DisplayNameFor(m => m.BaslamaTarihi)</th>
            <th style="width:100px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.OgretmenId)</td>
                <td>@Html.DisplayFor(m => item.Ad)</td>
                <td>@Html.DisplayFor(m => item.Soyad)</td>
                <td>@Html.DisplayFor(m => item.BaslamaTarihi)</td>
                <th class="d-flex flex-row gap-2">
                    <a asp-action="Edit" asp-route-id="@item.OgretmenId" class="btn btn-primary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.OgretmenId" class="btn btn-danger">Sil</a>
                </th>
            </tr>
        }
    </tbody>
</table>