@page "{id}"
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Page</h1>

<form method="post">
    <input type="hidden" asp-for="@Model.Employee.Id">
    <div class="row mb-3">
        <label asp-for="@Model.Employee.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Name" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="@Model.Employee.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Email" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="@Model.Employee.Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Photo" class="form-control">
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="@Model.Employee.Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Employee.Department" class="form-control">
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/Employees/Index" class="btn btn-primary">Cancel</a>
</form>